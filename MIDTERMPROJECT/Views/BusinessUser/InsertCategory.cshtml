@model MIDTERMPROJECT.Models.Dataase.Category

@{
    ViewBag.Title = "InsertCategory";
}

<div class="panel panel-body">
    <div class="col-md-3">
        @{ Html.RenderAction("SideMenuBar", "Home");}
    </div>

    <div class="col-md-9">
        <br />
        <h2 class="text-info text-center">Add New Category</h2>
        <br />
        <form method="post">

            <div class="form-group row">
                <div class="col-sm-3">
                    <label>Category Name</label>
                </div>
                <div class="col-md-6">
                    @*<input type="text" name="categoryName" class="form-control" />*@

                    @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group row">
                <div class="col-md-2 col-md-offset-3">
                    <input type="submit" value="Create" class="btn btn-primary form-control" />
                </div>
                <div class="col-md-3">
                    <a href="/BusinessUser/CategoryIndex" class="btn btn-success">Back to List</a>
                </div>
            </div>

        </form>
    </div>
</div>




